FROM node:20-alpine AS builder

WORKDIR /app
 
COPY package*.json ./

RUN npm ci

COPY prisma ./prisma/

RUN npx prisma generate

COPY tsconfig*.json ./
COPY . .

RUN npm run build

 
FROM node:20-alpine

WORKDIR /app


COPY package*.json ./

RUN npm ci --only=production

COPY prisma ./prisma/
RUN npx prisma generate

COPY --from=builder /app/dist ./dist

EXPOSE 3000

CMD ["node", "dist/main.js"]